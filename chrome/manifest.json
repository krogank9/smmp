{
	"manifest_version": 2,

	"name": "Social Media MEGAposter",
	"version": "2.66",

	"browser_action": {
	},

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"tabs", "storage", "unlimitedStorage",
		"webRequest", "webRequestBlocking", 
		"debugger",
		"<all_urls>"
	],
	
	"icons": { "16": "img/icon16.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
